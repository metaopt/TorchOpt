# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[**.md]
indent_size = 2
x-soft-wrap-text = true

[**.rst]
indent_size = 4
x-soft-wrap-text = true

[Makefile]
indent_style = tab

[**.cpp]
indent_size = 2

[**.h]
indent_size = 2

[**.cuh?]
indent_size = 2
